<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/monetize_purchase_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/monetize_purchase_id"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monetize_purchase_token_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/monetize_purchase_token"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/monetize_purchase_id_label"
        app:layout_constraintTop_toBottomOf="@+id/monetize_purchase_id_label" />

    <TextView
        android:id="@+id/monetize_purchase_id_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/monetize_purchase_id_label"
        app:layout_constraintStart_toEndOf="@+id/monetize_purchase_id_label"
        tools:text="123456789" />

    <TextView
        android:id="@+id/monetize_purchase_token_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/monetize_purchase_token_label"
        app:layout_constraintStart_toEndOf="@+id/monetize_purchase_token_label"
        tools:text="123456789" />

</androidx.constraintlayout.widget.ConstraintLayout>
