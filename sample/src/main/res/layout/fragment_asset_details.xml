<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".ui.assets.AssetDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/asset_details_title_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColorHint="#A1887F"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:hint="Title Data" />

            <androidx.cardview.widget.CardView
                android:id="@+id/asset_details_image_card"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_title_data">

                <ImageView
                    android:id="@+id/asset_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/asset_details_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/assets_asset_description"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_image_card" />

            <TextView
                android:id="@+id/asset_details_description_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textColorHint="#8D6E63"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_description_label"
                tools:hint="Description Data" />

            <TextView
                android:id="@+id/asset_details_key_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/assets_asset_key"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_description_data" />

            <TextView
                android:id="@+id/asset_details_key_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColorHint="#8D6E63"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_key_label"
                tools:hint="Description Data" />

            <TextView
                android:id="@+id/asset_details_url_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/assets_asset_url"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_key_data" />

            <TextView
                android:id="@+id/asset_details_url_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:autoLink="web"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColorHint="#8D6E63"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_url_label"
                tools:hint="Description Data" />

            <View
                android:id="@+id/simple_line_button"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/material_dynamic_neutral20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_url_data" />

            <TextView
                android:id="@+id/asset_details_buttom_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/assets_asset_button"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/simple_line_button" />

            <TextView
                android:id="@+id/asset_details_buttom_label_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/assets_asset_button_label"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_buttom_label" />

            <TextView
                android:id="@+id/asset_details_buttom_label_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColorHint="#8D6E63"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_buttom_label_label"
                tools:hint="Description Data" />

            <TextView
                android:id="@+id/asset_details_buttom_action_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/assets_asset_button_action"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_buttom_label_data" />

            <TextView
                android:id="@+id/asset_details_buttom_action_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColorHint="#8D6E63"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_buttom_action_label"
                tools:hint="Description Data" />

            <View
                android:id="@+id/simple_line_meta"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/material_dynamic_neutral20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_buttom_action_data" />

            <TextView
                android:id="@+id/asset_details_metadata_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/assets_asset_meta_data"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/simple_line_meta" />

            <TextView
                android:id="@+id/asset_details_meta_file_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/assets_asset_original_file_name"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_metadata_label" />

            <TextView
                android:id="@+id/asset_details_meta_file_name_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColorHint="#8D6E63"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_meta_file_name_label"
                tools:hint="Description Data" />

            <TextView
                android:id="@+id/asset_details_meta_content_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/assets_asset_content_type"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_meta_file_name_data" />

            <TextView
                android:id="@+id/asset_details_meta_file_type_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColorHint="#8D6E63"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_meta_content_type_label"
                tools:hint="Description Data" />

            <TextView
                android:id="@+id/asset_details_meta_content_length_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/assets_asset_conent_length"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_meta_file_type_data" />

            <TextView
                android:id="@+id/asset_details_meta_file_length_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColorHint="#8D6E63"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asset_details_meta_content_length_label"
                tools:hint="Description Data" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
