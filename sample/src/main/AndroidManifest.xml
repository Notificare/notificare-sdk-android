<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="re.notifica.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notificare">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="re.notifica.intent.action.NotificationOpened" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="re.notifica.push.ui.NotificationActivity"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.Notificare.Translucent" />

        <receiver android:name="re.notifica.app.NotificareIntentReceiver" />
        <receiver android:name="re.notifica.push.app.NotificarePushIntentReceiver" />

        <!--        <meta-data-->
        <!--            android:name="re.notifica.push.automatic_default_channel_enabled"-->
        <!--            android:value="true" />-->

        <meta-data
            android:name="re.notifica.push.notification_small_icon"
            android:resource="@drawable/ic_rocket_black_24dp" />
    </application>

</manifest>
