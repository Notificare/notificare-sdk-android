<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="re.notifica.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notificare">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="re.notifica.intent.action.RemoteMessageOpened" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="re.notifica.intent.action.NotificationOpened" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="re.notifica.intent.action.ActionOpened" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="re.notifica" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="hallo.ntc.re"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="test.nc${notificareApplicationId}" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="push.notifica.re"
                    android:pathPrefix="/oauth/validate/${notificareApplicationId}"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="push.notifica.re"
                    android:pathPrefix="/oauth/resetpassword/${notificareApplicationId}"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.inbox.InboxActivity"
            android:exported="false" />
        <activity
            android:name="re.notifica.push.ui.NotificationActivity"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Notificare.Translucent" />

        <receiver
            android:name="re.notifica.NotificareIntentReceiver"
            android:exported="false" />

        <receiver
            android:name="re.notifica.push.NotificarePushIntentReceiver"
            android:exported="false" />

        <!--        <meta-data-->
        <!--            android:name="re.notifica.push.automatic_default_channel_enabled"-->
        <!--            android:value="true" />-->

        <meta-data
            android:name="re.notifica.push.notification_small_icon"
            android:resource="@drawable/ic_rocket_black_24dp" />

        <meta-data
            android:name="re.notifica.push.ui.show_notification_toasts"
            android:value="true" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${googleMapsApiKey}" />
    </application>

</manifest>
